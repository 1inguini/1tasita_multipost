{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch WebExtension",
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "addonPath": "${workspaceFolder}",
      "reloadOnChange": {
        "watch": [
          "${workspaceFolder}/manifest.json",
          "${workspaceFolder}/**/*.js",
          "${workspaceFolder}/**/*.html"
        ]
      }
    }
  ]
}