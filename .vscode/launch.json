{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch WebExtension",
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "addonPath": "${workspaceFolder}",
      "url": "about:debugging#/runtime/this-firefox",
      "reloadOnChange": {
        "watch": [
          "${workspaceFolder}/manifest.json",
          "${workspaceFolder}/*.js",
          "${workspaceFolder}/*.mjs",
          "${workspaceFolder}/*.html"
        ]
      }
    }
  ]
}